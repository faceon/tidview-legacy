{
  "manifest_version": 3,
  "name": "Tidview",
  "description": "Market tides, made visible - Next.js powered portfolio for Polymarket",
  "version": "1.0.0",
  "minimum_chrome_version": "120",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Tidview",
    "default_popup": "portfolio.html"
  },
  "side_panel": {
    "default_path": "portfolio.html"
  },
  "permissions": ["storage", "alarms", "sidePanel"],
  "host_permissions": [
    "https://data-api.polymarket.com/*",
    "https://polygon-rpc.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
