    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-wc": "^3.0.2",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "tailwindcss": "^3.4.2",
    "autoprefixer": "^10.4.14",
